@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/custom/css/pagination.css" rel="stylesheet" />

}

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="/Uploads/DefaultImages/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">تفاصيل العقار</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="/"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> الصفحة الرئيسية</a></li>
                            <li>تفاصيل العقار</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- BREADCRUMB AREA END -->
<!-- PRODUCT DETAILS AREA START -->
<div class="ltn__product-area ltn__product-gutter mb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__shop-options">
                    <ul>
                        <li>
                            <div class="ltn__grid-list-tab-menu ">
                                <div class="nav">
                                    <a class="active show" data-bs-toggle="tab" href="#liton_product_grid"><i class="fas fa-th-large"></i></a>
                                    <a data-bs-toggle="tab" href="#liton_product_list"><i class="fas fa-list"></i></a>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="short-by text-center">
                                <select class="nice-select" id="sortOrder" onchange="ClsProperties.GetPropertiesForRent()">
                                    <option value="null">الترتيب حسب</option>
                                    <option value="price_asc">السعر (من الاقل الى الاكثر)</option>
                                    <option value="price_desc">السعر (الاكثر الى الاقل)</option>
                                    <option value="date_asc">تاريخ النشر (من الاقدم الى الاحدث)</option>
                                    <option value="date_desc">تاريخ النشر (من الاحدث الى الاقدم)</option>
                                </select>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade active show" id="liton_product_grid">
                        <div class="ltn__product-tab-content-inner ltn__product-grid-view">
                            <div class="row" id="property-list1">
                                <div class="col-lg-12">
                                    <div class="row" id="ItemArea1">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="liton_product_list">
                        <div class="ltn__product-tab-content-inner ltn__product-list-view">
                            <div class="row" id="property-list2">

                                <div class="col-lg-12">
                                    <div class="row" id="ItemArea2">
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="ltn__pagination-area text-center" id="ItemPagination">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- PRODUCT DETAILS AREA END -->
@section Scripts {
    <script src="~/custom/js/pagination.js"></script>

    <script src="~/modules/helper.js"></script>
    <script src="~/modules/properties.js"></script>

    <script>
        ClsProperties.GetPropertiesForRent();
    </script>

}