@model IEnumerable<PropertyVM>

<div class="row ltn__product-slider-item-four-active-full-width slick-arrow-1">
	@if (Model.Any())
	{
		@foreach (var item in Model)
		{
			<div class="col-lg-12">

				<!-- ltn__product-item -->
				<div class="ltn__product-item ltn__product-item-4 text-center---">
					<div class="product-img">
						<a href="/home/PropertyDetails/@item.PropertyId"><img src="@item.PropertyImages.FirstOrDefault()?.ImageUrl" alt="property"></a>
						<div class="product-badge">
							<ul>
								<li class="sale-badge @(item.Status?.StatusName == "للبيع" ? "bg-green---": "bg-green")">@item.Status?.StatusName</li>
							</ul>
						</div>
						<div class="product-img-location-gallery">
							<div class="product-img-location">
								<ul>
									<li>
										<a href="/home/PropertyDetails/@item.PropertyId"><i class="flaticon-pin"></i> @item.Governorate?.GovernorateName, @item.City?.CityName</a>
									</li>
								</ul>
							</div>
							<div class="product-img-gallery">
								<ul>
									<li>
										<a href="/home/PropertyDetails/@item.PropertyId"><i class="fas fa-camera"></i> @item.PropertyImages.Count()</a>
									</li>

								</ul>
							</div>
						</div>
					</div>
					<div class="product-info">
						<div class="product-price">
							<span>@item.Price <label> /جنية</label></span>
						</div>
						<h2 class="product-title"><a href="/home/PropertyDetails/@item.PropertyId" tabindex="0">@item.Type?.TypeName</a></h2>

						<div class="product-description">
							<a href="/home/PropertyDetails/@item.PropertyId">@Html.Raw(item.TruncatedDescription)</a>
							
						</div>

						<ul class="ltn__list-item-2 ltn__list-item-2-before">
							<li>
								<span>@item.Bedrooms <i class="flaticon-bed"></i></span>
								غرف
							</li>
							<li>
								<span>@item.Bathrooms <i class="flaticon-clean"></i></span>
								حمام
							</li>
							<li>
								<span>@item.Area <i class="flaticon-square-shape-design-interface-tool-symbol"></i></span>
								المساحة
							</li>
						</ul>
					</div>
					<div class="product-info-bottom">
						<partial name="PartialViews/PropertyModalPartial" model="@item"></partial>

					</div>
				</div>
			</div>

		}

	}
	else
	{
		<div class="col-lg-12">
			<div class="section-title-area ltn__section-title-2--- text-center">
				<h6 class="section-subtitle section-subtitle-2 ltn__secondary-color">العقارات</h6>
				<h1 class="section-title">لا توجد عقارات</h1>
			</div>
		</div>
	}

</div>