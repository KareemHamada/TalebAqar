@model List<UserInRoleVM>

@{
	ViewData["Title"] = "AddOrRemoveUsers";
	Layout = "~/Areas/AdminArea289/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper" style="min-height: 1017.2px;">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">

					<h1>Add or reomve users</h1>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<!-- left column -->
				<div class="col-md-6">
					<!-- general form elements -->
					<div class="card card-primary">
						<div class="card-header">


						</div>
						<!-- /.card-header -->
						<!-- form start -->
						<form role="form" method="post" asp-action="AddOrRemoveUsers" asp-route-roleId="@ViewBag.RoleId">

							<table class="table">
								<thead>
									<tr>
										<th></th>
										<th></th>
										<th></th>
										<th></th>
									</tr>
								</thead>
								<tbody id="propertyTableBody">
									@for (int i = 0; i < Model.Count; i++)
									{
										<tr>
											<td class="p-3">
												<label asp-for="@Model[i].IsInRole" for="exampleInputText">@Model[i].UserName</label>
											</td>
											<td class="p-3">
												<input asp-for="@Model[i].IsInRole" type="checkbox" class="form-control" id="exampleInputText">
											</td >


											<td class="p-3">
												<input type="hidden" asp-for="@Model[i].UserId" />
											</td>
											<td class="p-3">
												<input type="hidden" asp-for="@Model[i].UserName" />

											</td>
										</tr>
									}


								</tbody>

							</table>


							<div class="card-footer">
								<button type="submit" class="btn btn-primary">تعديل</button>
								<a class="btn btn-danger" asp-action="Edit" asp-route-id="@ViewBag.RoleId">الغاء </a>
							</div>
						</form>
					</div>

				</div>

				<div class="col-md-6"></div>

			</div>
			<!-- /.row -->
		</div><!-- /.container-fluid -->
	</section>
	<!-- /.content -->
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial"></partial>
}








