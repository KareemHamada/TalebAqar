@model IEnumerable<PropertyVM>;

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/AdminArea289/Views/Shared/_Layout.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Main content -->
	<section class="content">

		<div class="card">
			<div class="d-flex justify-content-between mb-3">
				<a asp-action="Create" class="btn btn-primary">
					<i class="fa fa-plus"></i> إضافة
				</a>
			</div>
			@if (Model.Any())
			{
				<div class="card-header">

					<h3 class="f-right">كل العقارات</h3>

				</div>
				<!-- /.card-header -->
				<div class="card-body">
					<table id="example1" class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>رقم الاعلان</th>
								<th>السعر</th>
								<th>المساحة</th>
								<th>الغرف</th>
								<th>الحمامات</th>
								<th>تكلفة الاعلان</th>
								<th>تاريخ إنشاءالاعلان</th>
								<th>مدة الإعلان بالايام</th>
								<th>حالة العقار</th>
								<th>نوع العقار</th>
								<th>المحافظة</th>
								<th>المدينة</th>
								<th>المالك</th>
								<th>المشاهدات</th>
								<th>رقم الطابق</th>
								<th>مفروش</th>
								<th>التامين</th>
								<th></th>
								<th></th>
								<th></th>

							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.NumOfAdvertisement</td>
									<td>@item.Price</td>
									<td>@item.Area</td>
									<td>@item.Bedrooms</td>
									<td>@item.Bathrooms</td>
									<td>@item.CostPrice</td>
									<td>

										@TimeZoneInfo.ConvertTimeFromUtc(item.CreatedDate, TimeZoneInfo.FindSystemTimeZoneById("Egypt Standard Time")).ToString("dd/MM/yyyy HH:mm")

									</td>
									<td>@item.PostDays</td>

									<td>@item.Status?.StatusName</td>
									<td>@item.Type?.TypeName</td>
									<td>@item.Governorate?.GovernorateName</td>
									<td>@item.City?.CityName</td>
									<td>@item.Owner?.FullName</td>
									@if (item.NumOfViews > 0)
									{
										<td>@item.NumOfViews</td>
									}
									else
									{
										<td>0</td>
									}


									<td>@item.FloorNum</td>
									@if (item.Furnished == true)
									{
										<td>نعم</td>
									}
									else
									{
										<td>لا</td>
									}
									@if (@item.Insurance > 0)
									{
										<td>@item.Insurance</td>
									}
									else
									{
										<td>0</td>
									}

									<partial name="_ButtonsPartial" model="@item.PropertyId.ToString()"></partial>

								</tr>
							}


						</tbody>
						<tfoot>
							<tr>
								<th>رقم الاعلان</th>
								<th>السعر</th>
								<th>المساحة</th>
								<th>الغرف</th>
								<th>الحمامات</th>
								<th>تكلفة الاعلان</th>
								<th>تاريخ إنشاءالاعلان</th>
								<th>مدة الإعلان بالايام</th>
								<th>حالة العقار</th>
								<th>نوع العقار</th>
								<th>المحافظة</th>
								<th>المدينة</th>
								<th>المالك</th>
								<th>المشاهدات</th>
								<th>رقم الطابق</th>
								<th>مفروش</th>
								<th>التامين</th>
								<th></th>
								<th></th>
								<th></th>
							</tr>
						</tfoot>
					</table>
				</div>
				<!-- /.card-body -->
			}
			else
			{
				<div class="card-header">
					<h3 class="text-danger f-right">لا توجد عقارات</h3>
				</div>
			}


		</div>
		<!-- /.card -->

	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Scripts {
	<!-- DataTables -->
	<script src="~/Admin/plugins/datatables/jquery.dataTables.js"></script>
	<script src="~/Admin/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>




	<!-- DataTables  & Plugins -->
	<script src="~/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
	<script src="~/Admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
	<script src="~/Admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
	<script src="~/Admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
	<script src="~/Admin/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
	<script src="~/Admin/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
	<script src="~/Admin/plugins/jszip/jszip.min.js"></script>
	<script src="~/Admin/plugins/pdfmake/pdfmake.min.js"></script>
	<script src="~/Admin/plugins/pdfmake/vfs_fonts.js"></script>
	<script src="~/Admin/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
	<script src="~/Admin/plugins/datatables-buttons/js/buttons.print.min.js"></script>
	<script src="~/Admin/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>


	<!-- Page specific script -->
	<script>
		$(function () {
			$("#example1").DataTable({
				"responsive": true, "lengthChange": false, "autoWidth": false,
				"buttons": ["copy", "excel", "colvis"]
			}).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
		});
	</script>

}


