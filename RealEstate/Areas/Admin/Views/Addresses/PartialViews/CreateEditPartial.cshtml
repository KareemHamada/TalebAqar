@model AddressVM

<div class="card-body">


	<input type="hidden" asp-for="AddressId" />
	<span class="text-danger" class="text-danger" asp-validation-for="AddressId"></span>

	<input type="hidden" asp-for="CurrentState" />


	<div class="form-group">
		<label asp-for="AddressName" for="exampleInputText">العنوان</label>
		<input asp-for="AddressName" type="text" class="form-control" id="exampleInputText" placeholder="أدخل العنوان">
		<span class="text-danger" class="text-danger" asp-validation-for="AddressName"></span>
	</div>


	<div class="form-group">
		<label asp-for="CityId" for="exampleInputGovernorate">المدينة</label>

		<select asp-for="CityId" asp-items="ViewBag.Cities" class="custom-select" id="exampleInputGovernorate">
			<option value="@null" class="text-center">اختر المدينة</option>
		</select>
		<span class="text-danger" asp-validation-for="CityId"></span>
	</div>

	
</div>