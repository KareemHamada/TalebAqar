@model string

<td>
    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@Model">
        <i class="fas fa-folder"></i>
        عرض التفاصيل</a>
</td> 
<td>
    <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@Model">
